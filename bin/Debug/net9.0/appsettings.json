{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "Elasticsearch": {
    "Uri": null
  },
  "Auth0": {
    "Domain": "YOUR_AUTH0_DOMAIN",
    "Audience": "YOUR_AUTH0_AUDIENCE"
  },
  "AllowedOrigins": [
    "http://localhost:3000",
    "https://babbly.yourdomain.com"
  ],
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "users-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/users/{**remainder}"
        },
        "AuthorizationPolicy": "authenticated"
      },
      "users-health-route": {
        "ClusterId": "users-cluster",
        "Match": {
          "Path": "/api/users/health"
        },
        "Transforms": [
          { "PathPattern": "/api/health" }
        ]
      },
      "auth-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/{**remainder}"
        }
      },
      "auth-health-route": {
        "ClusterId": "auth-cluster",
        "Match": {
          "Path": "/api/auth/health"
        },
        "Transforms": [
          { "PathPattern": "/api/health" }
        ]
      },
      "posts-route-write": {
        "ClusterId": "posts-cluster",
        "Match": {
          "Path": "/api/posts/{**remainder}",
          "Methods": [ "POST", "PUT", "DELETE", "PATCH" ]
        },
        "AuthorizationPolicy": "authenticated"
      },
      "posts-route-read": {
        "ClusterId": "posts-cluster",
        "Match": {
          "Path": "/api/posts/{**remainder}",
          "Methods": [ "GET" ]
        }
      },
      "posts-health-route": {
        "ClusterId": "posts-cluster",
        "Match": {
          "Path": "/api/posts/health"
        },
        "Transforms": [
          { "PathPattern": "/api/health" }
        ]
      },
      "comments-route-write": {
        "ClusterId": "comments-cluster",
        "Match": {
          "Path": "/api/comments/{**remainder}",
          "Methods": [ "POST", "PUT", "DELETE", "PATCH" ]
        },
        "AuthorizationPolicy": "authenticated"
      },
      "comments-route-read": {
        "ClusterId": "comments-cluster",
        "Match": {
          "Path": "/api/comments/{**remainder}",
          "Methods": [ "GET" ]
        }
      },
      "comments-health-route": {
        "ClusterId": "comments-cluster",
        "Match": {
          "Path": "/api/comments/health"
        },
        "Transforms": [
          { "PathPattern": "/api/health" }
        ]
      },
      "likes-route-write": {
        "ClusterId": "likes-cluster",
        "Match": {
          "Path": "/api/likes/{**remainder}",
          "Methods": [ "POST", "PUT", "DELETE", "PATCH" ]
        },
        "AuthorizationPolicy": "authenticated"
      },
      "likes-route-read": {
        "ClusterId": "likes-cluster",
        "Match": {
          "Path": "/api/likes/{**remainder}",
          "Methods": [ "GET" ]
        }
      },
      "likes-health-route": {
        "ClusterId": "likes-cluster",
        "Match": {
          "Path": "/api/likes/health"
        },
        "Transforms": [
          { "PathPattern": "/api/health" }
        ]
      }
    },
    "Clusters": {
      "users-cluster": {
        "Destinations": {
          "users-service": {
            "Address": "http://user-service:8080"
          }
        },
        "HttpClient": {
          "MaxConnectionsPerServer": 100,
          "DangerousAcceptAnyServerCertificate": true
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health"
          }
        }
      },
      "auth-cluster": {
        "Destinations": {
          "auth-service": {
            "Address": "http://auth-service:8080"
          }
        },
        "HttpClient": {
          "MaxConnectionsPerServer": 100,
          "DangerousAcceptAnyServerCertificate": true
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health"
          }
        }
      },
      "posts-cluster": {
        "Destinations": {
          "posts-service": {
            "Address": "http://post-service:8080"
          }
        },
        "HttpClient": {
          "MaxConnectionsPerServer": 100,
          "DangerousAcceptAnyServerCertificate": true
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health"
          }
        }
      },
      "comments-cluster": {
        "Destinations": {
          "comments-service": {
            "Address": "http://comment-service:8080"
          }
        },
        "HttpClient": {
          "MaxConnectionsPerServer": 100,
          "DangerousAcceptAnyServerCertificate": true
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health"
          }
        }
      },
      "likes-cluster": {
        "Destinations": {
          "likes-service": {
            "Address": "http://like-service:8080"
          }
        },
        "HttpClient": {
          "MaxConnectionsPerServer": 100,
          "DangerousAcceptAnyServerCertificate": true
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:10",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/api/health"
          }
        }
      }
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*/api/feed*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*/api/comments*",
        "Period": "1m",
        "Limit": 100
      },
      {
        "Endpoint": "*/api/likes*",
        "Period": "1m",
        "Limit": 30
      },
      {
        "Endpoint": "*/api/users*",
        "Period": "1m",
        "Limit": 50
      },
      {
        "Endpoint": "*/api/auth*",
        "Period": "1m",
        "Limit": 100
      }
    ]
  }
}
